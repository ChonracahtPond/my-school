generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model SliderSchool {
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  img1 String?
}


//หน้า สมัครเรียน  (แต่ไม่ใช่แบบฟอร์มสมัคร)
